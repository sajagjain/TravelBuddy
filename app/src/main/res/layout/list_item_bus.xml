<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bus_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shadow_boundary"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="5dp"
            android:layout_marginLeft="3dp"
            android:layout_height="match_parent"
            app:srcCompat="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.00"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bus_main_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/bus_icon" />

                    <LinearLayout
                        android:id="@+id/bus_click_layout_left_horizontal_inside"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/bus_ac"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            app:srcCompat="@drawable/ac_icon" />

                        <ImageView
                            android:id="@+id/bus_nonac"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:foregroundTint="@android:color/holo_blue_light"
                            android:paddingTop="5dp"
                            app:srcCompat="@drawable/non_ac_icon" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/bus_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:singleLine="false"
                        android:text="Travels"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <ToggleButton
                        android:id="@+id/bus_save_that"
                        android:layout_width="30dp"
                        android:layout_margin="4dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:onClick="onToggleClicked"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/save_that_deactivated"
                        android:textSize="0dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bus_click_layout_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rupee_sign"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="left"
                            android:layout_weight="0.01"
                            android:padding="5dp"
                            app:srcCompat="@drawable/rupee_iconn" />

                        <TextView
                            android:id="@+id/bus_price"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Bus Price"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bus_rating"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center"
                            android:layout_weight=".7"
                            android:gravity="right"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:text="2.5"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical|center"
                            android:layout_weight=".3"
                            app:srcCompat="@drawable/star_rating_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/kuchbhi"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="Seats Available"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/bus_seats_available"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/kuchbhi456"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="Journey Duration"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/bus_duration"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/kuchbhi2"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="Departure"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/bus_departure"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingRight="10dp"
                            android:singleLine="false"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/kuchbhi3"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:singleLine="true"
                            android:text="Arrival"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/bus_arrival"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:paddingRight="10dp"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_click_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="Seat Type"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bus_seat_type"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="Amenities"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bus_amenities"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:ems="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:text="Bus Type"
                        android:textColor="@android:color/background_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bus_type"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>